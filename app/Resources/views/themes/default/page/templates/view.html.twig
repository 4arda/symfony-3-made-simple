{% extends app_twig.getThemeBase() %}

{% set page_title = '' %}
{% set page_description = '' %}

{% block style %}
{% endblock style %}

    {% block body %}
        <h1>{{ entity.title }}</h1>
        <div>{{ entity.body|raw }}</div>

        {% if attribute(entity, 'getCommentable') is defined  %}
            <h3>Comments</h3>
            <hr>
            {% if entity.commentOpen %}
                <div class="col-md-4 panel panel-default">
                    <h3>Add Commment</h3>
                    {{ app_twig.getCommentForm(entity)|raw }}
                </div>
            {% else %}
                Comments are closed
            {% endif %}
            <div class="col-md-8">
                {{ app_twig.getCommentList(entity)|raw }}
            </div>
        {% endif %}



    {% endblock body %}

{% block javascripts %}
{% endblock javascripts %}
